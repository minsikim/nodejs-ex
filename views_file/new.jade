html
  head
    meta(charset='utf-8')
  body
    h1 Articles
    p3
      a(href='/topic/new') new
    ul
      each topic in topics
        li
          a(href='/topic/'+topic)= topic
    form(action='/topic' method='post')
      p
        input(type='text' name='title' placeholder='title')
      p
        textarea(style="height:200px" name='article')
      p
        input(type='submit')
